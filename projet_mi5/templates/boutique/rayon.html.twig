{% extends "base.html.twig" %}
{% block content %}
<main role="main" class="container">
    <div class="row">
        <div class="alert alert-dark col-md-12">
            <h1><i class="fas fa-store"></i> Rayons / 3 produit(s)</h1>
        </div>
    </div>

    <div class="row">
        {% for item in produits %}
            <div class="col-4">
                <div class="card clickable" style="width: 18rem;" >
                    <img src="{{ asset(item.visuel) }}" class="card-img-top" alt="Fruits">
                    <div class="card-body">
                        <h4 class="card-title">{{ item.libelle }}</h4>
                        <p class="card-text"><i>{{ item.texte }}</i></p>
                        <p class="card-text"><i>{{ item.prix}}$</i></p>
                        <a href="{{ path('panier_ajouter', { idProduit: item.id }) }}" class="btn btn-success">Ajouter au panier </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</main>
{% endblock %}