{% extends "base.html.twig" %}
{% block content %}
    <h1>Panier</h1>
    <div class="row">
        <div class="alert alert-dark col-md-12">
            <h1>
                <i class="fas fa-shopping-cart"></i> 2 produit(s) :
                <b>4,95 €</b>
            </h1>
            <div class="col-md-12 btn-group btn-group-lg" role="group">
                <a class="btn btn-secondary" href="{{ path ('boutique_page') }}">
                    Continuer les Courses
                </a>
                <a class="btn btn-primary" href="{{ path ('test_page') }}">
                    Passer la Commande
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped table-sm table-hover">
            <thead>
            <tr>
                <th></th>
                <th>Produit</th>
                <th class="text-right"></th>
                <th>Quantité</th>
                <th class="text-right">Total</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
                {% for item in produits %}
                    <div class="col-4">
                        <div class="card clickable" style="width: 18rem;" >
                            <img src="{{ asset(item.visuel) }}" class="card-img-top" alt="Fruits">
                            <div class="card-body">
                                <h4 class="card-title" >{{ item.libelle }}</h4>
                                <p class="card-text"><i>{{ item.texte }}</i></p>
                            </div>
                        </div>
                    </div>
                    <a href="/panier/enlever/{{ item.id }}">
                        <i class="fas fa-minus-square text-muted"></i>
                    </a>
                    1
                    <a href="/panier/ajouter/{{ item.id }}">
                        <i class="fas fa-plus-square text-muted"></i>
                    </a>

                <td class="text-right">
                    2,11 €
                </td>
                <td>
                    <a href="/panier/supprimer/{{ item.id }}">
                        <i class="fas fa-trash text-muted"
                           data-toggle="tooltip" title="Supprimer {{ item.texte }}" data-placement="right" data-html="true"></i>
                    </a>
                </td>

            {% endfor %}
            </tbody>
            <thead>
            <tr>
                <th class="text-right" colspan="4">
                    Total
                </th>
                <th class="text-right">
                    4,95 €
                </th>
             </tr>
            </thead>
        </table>
    </div>
{% endblock %}